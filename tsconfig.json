{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "_test/*": ["./test/*"]
    }
  },
  "include": ["src", "index.d.ts"],
  "exclude": ["node_modules"]
}